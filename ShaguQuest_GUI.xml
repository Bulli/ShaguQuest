<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">

  <Frame name="ShaguQuest_GUI" hidden="true" movable="true" enableMouse="true" toplevel="true">
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Size>
      <AbsDimension x="600" y="420" />
    </Size>
    <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
      <EdgeSize>
        <AbsValue val="16" />
      </EdgeSize>
      <BackgroundInsets>
        <AbsInset top="4" right="3" bottom="3" left="4" />
      </BackgroundInsets>
      <Color r="0.1" g="0.1" b="0.1" a="0.85" />
      <TileSize>
        <AbsValue val="16" />
      </TileSize>
    </Backdrop>
    <Scripts>
      <OnMouseDown>
        ShaguQuest_GUI_OnMouseDown()
      </OnMouseDown>
      <OnMouseUp>
        ShaguQuest_GUI_OnMouseUp()
      </OnMouseUp>
    </Scripts>

    <Layers>
      <Layer level="OVERLAY">
        <FontString name="$parentLabelTitleShagu" inherits="GameFontNormalLarge" text="ShaguQuest">
          <FontHeight val="10" />
          <Color r="0.4" g="0.8" b="1" />
          <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
              <Offset>
                <AbsDimension x="20" y="-20" />
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <FontString name="$parentLabelTitleShagu" inherits="GameFontNormalLarge" text="Database">
          <FontHeight val="10" />
          <Color r="0.8" g="0.8" b="0.8" />
          <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
              <Offset>
                <AbsDimension x="120" y="-20" />
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>


        <FontString name="$parentLabelSpawn" inherits="GameFontNormal" text="Spawns:">
          <Color r="1" g="1" b="0.8" />
          <Size>
            <AbsDimension x="200" y="20" />
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
              <Offset>
                <AbsDimension x="10" y="-50" />
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <FontString name="$parentLabelItem" inherits="GameFontNormal" text="Items:">
          <Color r="1" g="1" b="0.8" />
          <Size>
            <AbsDimension x="200" y="20" />
          </Size>
          <Anchors>
            <Anchor point="TOP" relativePoint="TOP">
              <Offset>
                <AbsDimension x="0" y="-50" />
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <FontString name="$parentLabelVendor" inherits="GameFontNormal" text="Vendor:">
          <Color r="1" g="1" b="0.8" />
          <Size>
            <AbsDimension x="200" y="20" />
          </Size>
          <Anchors>
            <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
              <Offset>
                <AbsDimension x="-10" y="-50" />
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>

      <Button name="$parent_Button" inherits="UIPanelButtonTemplate" text="X">
        <Size>
          <AbsDimension x="20" y="20" />
        </Size>
        <Anchors>
          <Anchor point="TOPRIGHT">
            <Offset>
              <AbsDimension x="-15" y="-15" />
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnClick>
            ShaguQuest_GUI:Hide()
          </OnClick>
        </Scripts>
      </Button>

      <Button name="$parent_Button" inherits="UIPanelButtonTemplate" text="Clean Map">
        <Size>
          <AbsDimension x="100" y="25" />
        </Size>
        <Anchors>
          <Anchor point="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="-15" y="20" />
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnClick>
            ShaguQuest_CleanMap()
          </OnClick>
        </Scripts>
      </Button>

      <EditBox name="$parent_Search" inherits="InputBoxTemplate" autoFocus="false">
        <Size>
          <AbsDimension x="460" y="25" />
        </Size>
        <Anchors>
          <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="25" y="20" />
            </Offset>
          </Anchor>
        </Anchors>
        <FontString inherits="GameFontNormal" />
        <Scripts>
          <OnTextChanged>
            ShaguQuest_GUI_Query(ShaguQuest_GUI_Search:GetText())
          </OnTextChanged>
        </Scripts>
      </EditBox>
    </Frames>

  </Frame>


</Ui>
