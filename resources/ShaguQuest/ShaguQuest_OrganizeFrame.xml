<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">

	<Frame name="ShaguQuest_OrganizeFrame" toplevel="true" enableMouse="true" movable="true" parent="UIParent" hidden="true">
		<Size>
			<AbsDimension x="256" y="128"/>
		</Size>
		<Anchors>
 			<Anchor point="CENTER">
 				<Offset>
 					<AbsDimension x="0" y="0"/>
 				</Offset>
 			</Anchor>
 		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		
		<Layers>
			<Layer level="ARTWORK">
			
				<Texture name="ShaguQuest_OrganizeFrameHeader" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="256" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				
				<FontString inherits="GameFontNormal" text="ShaguQuest_ORGANIZE_TITLE">
					<Anchors>
						<Anchor point="TOP" relativeTo="ShaguQuest_OrganizeFrameHeader">
							<Offset>
								<AbsDimension x="0" y="-14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

			
				<FontString inherits="GameFontNormal" text="ShaguQuest_ORGANIZE_TEXT">
					<Anchors>
						<Anchor point="TOP" relativeTo="ShaguQuest_OrganizeFrame" relativePoint="TOP">
							<Offset>
								<AbsDimension x="0" y="-28"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<EditBox name="ShaguQuest_OrganizeFrame_Text" autoFocus="false" inherits="InputBoxTemplate">
				<Size>
					<AbsDimension x="216" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="ShaguQuest_OrganizeFrame" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="22" y="-68"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnTabPressed>
						-- Hmm.. remove later?
					</OnTabPressed>
					<OnEnterPressed>
						if ( this:GetText() ~= "!!!reset" and this:GetText() ~= "!!!resetall" and string.len(ShaguQuest_OrganizeFrame_Text:GetText()) > 0 ) then
							this:ClearFocus();
							
							--Remove all commas
							this:SetText(string.gsub(this:GetText(),"[,]*", ""));
						
							ShaguQuest_OrganizeFunctions(this:GetText());
							ShaguQuest_OrganizeFrame:Hide();
						end
					</OnEnterPressed>
					<OnEscapePressed>
						this:ClearFocus();
						ShaguQuest_OrganizeFrame:Hide();
					</OnEscapePressed>
					<OnTextChanged>
						this:SetText(string.gsub(this:GetText(),"[,]*", ""));
					</OnTextChanged>
				</Scripts>
				<FontString inherits="ChatFontNormal" bytes="64"/>
			</EditBox>
			
			
			
			<Button name="ShaguQuest_OrganizeFrame_Okay" inherits="UIPanelButtonTemplate" text="ShaguQuest_OKAY">
				<Size>
					<AbsDimension x="80" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativeTo="ShaguQuest_OrganizeFrame" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-16" y="16"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if ( ShaguQuest_OrganizeFrame_Text:GetText() ~= "!!!reset" and ShaguQuest_OrganizeFrame_Text:GetText() ~= "!!!resetall" and string.len(ShaguQuest_OrganizeFrame_Text:GetText()) > 0) then
							ShaguQuest_OrganizeFrame_Text:ClearFocus();
							
							--Remove all commas
							ShaguQuest_OrganizeFrame_Text:SetText(string.gsub(ShaguQuest_OrganizeFrame_Text:GetText(),"[,]*", ""));
							
							ShaguQuest_OrganizeFunctions(ShaguQuest_OrganizeFrame_Text:GetText());
							ShaguQuest_OrganizeFrame:Hide();
						end
					</OnClick>
				</Scripts>
			</Button>

			<Button name="ShaguQuest_OrganizeFrame_Cancel" inherits="UIPanelButtonTemplate" text="ShaguQuest_POPUP_CANCEL">
				<Size>
					<AbsDimension x="80" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="ShaguQuest_OrganizeFrame" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="16" y="16"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						ShaguQuest_OrganizeFrame_Text:ClearFocus();
						ShaguQuest_OrganizeFrame:Hide();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		
		
	</Frame>
	
</Ui>